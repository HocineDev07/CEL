<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CEL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
      <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <item name="android:fontFamily">@font/cairo</item>
        <item name="fontFamily">@font/cairo</item>

    </style>

    <!--  FullScreen  -->
    <style name="FullScreen" parent="Theme.CEL">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  text styles  -->
    <style name="Heading1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header1_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Heading2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header2_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Heading3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header3_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Heading4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/header4_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Paragraph1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/paragraph1_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Paragraph2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Paragraph3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Paragraph4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/mini2_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- WindowAnimationTransition -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- splashScreen style -->
    <style name="splashScreenTheme" parent="Theme.CEL">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>